    {
      "type": "color",
      "id": "sc-bg-secondary",
      "label": "Secondary background",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "newsletter",
      "category": "Repeatable"
    }
  ]
}
{% endschema %}
