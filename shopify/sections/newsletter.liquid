{% liquid
  assign section_anchor_id = section.settings.section_anchor_id | handleize

  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
  assign input_subtext = section.settings.input_subtext

  assign pt_mob = section.settings.pt_mob
  assign pb_mob = section.settings.pb_mob
  assign pt_tab = section.settings.pt_tab
  assign pb_tab = section.settings.pb_tab
  assign pt_desk = section.settings.pt_desk
  assign pb_desk = section.settings.pb_desk
%}

{% render 'section-paddings',
  section_id: section.id,
  pt_mob: pt_mob,
  pb_mob: pb_mob,
  pt_tab: pt_tab,
  pb_tab: pb_tab,
  pt_desk: pt_desk,
  pb_desk: pb_desk
%}

{% render 'global-sections-css-variables-setter' %}

<div
  id="{{ section_anchor_id }}"
  data-section-id="{{ section.id }}"
  class="bg-sc-bg-primary"
>
  <div class="container">
    <div class="mx-auto max-w-[1000px] text-center">
      {% if subtitle != blank %}
        <div class="text-sc-subtitle mb-4 text-base font-medium">{{ subtitle }}</div>
      {% endif %}
      {% if title != blank %}
        <h2 class="font-secondary 2k:text-5xl text-sc-title text-3xl font-medium 2xl:text-4xl">{{ title }}</h2>
      {% endif %}
    </div>
    <div class="mx-auto mt-10 max-w-[600px]">
      {% render 'layout-newsletter-form' %}
      {% if input_subtext != blank %}
        <p class="text-sc-body-primary mt-1 text-xs">{{ input_subtext }}</p>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "newsletter",
  "tag": "footer",
  "settings": [
    {
      "type": "text",
      "id": "section_anchor_id",
      "label": "Section anchor id",
      "default": "FOOTER"
    },
    {
      "type": "header",
      "content": "Padding Y settings"
    },
    {
      "type": "number",
      "id": "pt_mob",
      "label": "Mobile padding top in px",
      "default": 60
    },
    {
      "type": "number",
      "id": "pb_mob",
      "label": "Mobile padding bottom in px",
      "default": 60
    },
    {
      "type": "number",
      "id": "pt_tab",
      "label": "Tablet padding top in px",
      "default": 60
    },
    {
      "type": "number",
      "id": "pb_tab",
      "label": "Tablet padding bottom in px",
      "default": 60
    },
    {
      "type": "number",
      "id": "pt_desk",
      "label": "Desktop padding top in px",
      "default": 60
    },
    {
      "type": "number",
      "id": "pb_desk",
      "label": "Desktop padding bottom in px",
      "default": 60
    },
    {
      "type": "text",
      "id": "title",
      "label": "Enter title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Enter subtitle"
    },
    {
      "type": "text",
      "id": "input_subtext",
      "label": "Enter input subtext"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "color",
      "id": "sc-title",
      "label": "Title",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
